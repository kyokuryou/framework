<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                     http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="secLauncher" class="org.smarty.security.common.SecurityLauncher" parent="webLauncher" abstract="true"/>

    <bean id="secCaptchaFilter" class="org.smarty.security.filter.SecurityCaptchaFilter" abstract="true">
        <property name="captchaService" ref="captchaService"/>
        <property name="defaultTargetUrl" value="${login.url}"/>
    </bean>

</beans>